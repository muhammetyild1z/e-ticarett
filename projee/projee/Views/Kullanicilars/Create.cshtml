@model projee.Models.Kullanicilar

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="        text-align: center;
        color: #ee768fbd">
    Yeni kullanıcı ekle
</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            

        <div class="form-group">
            <h6 style="margin-left:25px;color: #ee768fbd ">Ad soyad</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ad_soyad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ad_soyad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6 style="margin-left:25px;color: #ee768fbd ">Kullanıcı adı</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.kullanıcı_adi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kullanıcı_adi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6 style="margin-left:25px;color: #ee768fbd ">Şifre</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6 style="margin-left:25px;color: #ee768fbd ">Rol</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rol, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6 style="margin-left:25px;color: #ee768fbd ">Silindi mi</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Silindimi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Silindimi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kayıt" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style=" margin-left:40px;margin-top:20px;margin-bottom:20px">
    @Html.ActionLink("Geri dön", "Index")
</div>
