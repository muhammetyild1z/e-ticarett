@model IEnumerable<projee.Models.Stok>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-size:35px;text-align:center;color: #ee768fbd" >Stok listesi</h2>

<p style="margin-top:30px">
    <a href="/Kullanicilars/Create"> <input type="submit" name="name" value="Yeni Stok kaydı oluştur" class="btn-dark" /></a>
</p>
<table class="table">
    <tr>
        <th>
           Giriş tarihi
        </th>
        <th>
           Stok kodu
        </th>
        <th>
            Stok adı
        </th>
        <th>
            Silindi mi?
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stokkodu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stokadi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Silindimi)
        </td>
        <td>
            <a href="/Stoks/Edit/@item.Stokid"><button type="submit" class="btn btn-primary btn-lg" name="buton">Düzenle</button></a>
            <a href="/Stoks/Details/@item.Stokid"><button type="submit" class="btn btn-primary btn-lg" name="buton">Detay</button></a>
            <a href="/Stoks/Delete/@item.Stokid"><button type="submit" class="btn btn-primary btn-lg" name="buton">Sil</button></a>
        </td>
    </tr>
}

</table>
